model Floor {
  id            Int           @id @default(autoincrement())
  hostelBlockId Int
  hostelBlock   HostelBlock   @relation(fields: [hostelBlockId], references: [id])
  floorNumber   Int
  rooms         Room[]
  students                  InstituteStudent[]
}

model Room {
  id         Int        @id @default(autoincrement())
  floorId    Int
  floor      Floor      @relation(fields: [floorId], references: [id])
  roomNumber String     @db.VarChar(255)
  capacity   Int
  students   InstituteStudent[]
}

model StudentAttendence {
  id                              Int                     @id @default(autoincrement())
  studentId                       Int                     @unique
  student                         InstituteStudent        @relation(fields: [studentId], references: [id])
  hostelBlockId                   Int                     @unique
  hostelBlock                     HostelBlock             @relation(fields: [hostelBlockId], references: [id])
  presentDays                     Json                    @default("[]")
  absentDays                      Json                    @default("[]")
  date                            DateTime
  status                          AttendanceStatus
  createdAt                       DateTime                @default(now()) @db.Timestamp(6)

  @@unique([studentId, date])
}